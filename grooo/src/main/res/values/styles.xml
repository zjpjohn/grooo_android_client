<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.DayNight.NoActionBar">

        <!-- Material Theme -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/colorControlNormal</item>
        <item name="colorControlActivated">@color/colorControlActivated</item>
        <item name="colorSwitchThumbNormal">@color/colorSwitchThumbNormal</item>

    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

    </style>

    <style name="RestaurantListTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>


    <style name="LoginTheme" parent="AppTheme">

    </style>


    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Widget.TextAppearance.None" parent="TextAppearance.AppCompat.Headline">

        <item name="android:textColor">@android:color/transparent</item>
    </style>

    <style name="Widget.AppCompat.RatingBar.Medium" parent="Widget.AppCompat.RatingBar.Small">

        <item name="android:minHeight">24dp</item>
        <item name="android:maxHeight">24dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>